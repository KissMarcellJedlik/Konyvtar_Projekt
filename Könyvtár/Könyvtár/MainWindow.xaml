<!-- STATS ROW -->
<StackPanel Orientation="Horizontal">
    <!-- TOTAL BOOKS -->
    <Border Background="#6366f1" Padding="20,15" Margin="0,0,15,0" 
            Width="180" CornerRadius="8">
        <StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                <TextBlock Text="📊" FontSize="16" Foreground="White" Margin="0,0,8,0"/>
                <TextBlock Text="Total Books" FontSize="12" Foreground="White" FontWeight="SemiBold"/>
            </StackPanel>
            <TextBlock x:Name="TotalBooksText" Text="0" FontSize="24" FontWeight="Bold" 
                      Foreground="White"/>
        </StackPanel>
    </Border>

    <!-- AVAILABLE BOOKS -->
    <Border Background="#10b981" Padding="20,15" Margin="0,0,15,0" 
            Width="180" CornerRadius="8">
        <StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                <TextBlock Text="✅" FontSize="16" Foreground="White" Margin="0,0,8,0"/>
                <TextBlock Text="Available" FontSize="12" Foreground="White" FontWeight="SemiBold"/>
            </StackPanel>
            <TextBlock x:Name="AvailableBooksText" Text="0" FontSize="24" FontWeight="Bold" 
                      Foreground="White"/>
        </StackPanel>
    </Border>

    <!-- BORROWED BOOKS -->
    <Border Background="#f59e0b" Padding="20,15" 
            Width="180" CornerRadius="8">
        <StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                <TextBlock Text="📖" FontSize="16" Foreground="White" Margin="0,0,8,0"/>
                <TextBlock Text="Borrowed" FontSize="12" Foreground="White" FontWeight="SemiBold"/>
            </StackPanel>
            <TextBlock x:Name="BorrowedBooksText" Text="0" FontSize="24" FontWeight="Bold" 
                      Foreground="White"/>
        </StackPanel>
    </Border>
</StackPanel>