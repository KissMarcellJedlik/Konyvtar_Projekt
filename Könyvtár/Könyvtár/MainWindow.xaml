<Window x:Class="ModernLibrary.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BookFlow Pro" Height="800" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="#f8fafc">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="400"/>
        </Grid.ColumnDefinitions>

        <!-- MAIN CONTENT AREA -->
        <Grid Grid.Column="0" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- HEADER -->
            <StackPanel Grid.Row="0" Margin="0,0,0,20">
                <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                    <Border Background="#6366f1" Padding="12,8" Margin="0,0,12,0" CornerRadius="8">
                        <TextBlock Text="📚" FontSize="20" Foreground="White"/>
                    </Border>
                    <TextBlock Text="BookFlow Pro" FontSize="24" FontWeight="Bold" 
                              Foreground="#1f2937"/>
                </StackPanel>

                <!-- STATS ROW -->
                <StackPanel Orientation="Horizontal">
                    <!-- TOTAL BOOKS -->
                    <Border Background="#6366f1" Padding="20,15" Margin="0,0,15,0" 
                            Width="180" CornerRadius="8">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <TextBlock Text="📊" FontSize="16" Foreground="White" Margin="0,0,8,0"/>
                                <TextBlock Text="Total Books" FontSize="12" Foreground="White" FontWeight="SemiBold"/>
                            </StackPanel>
                            <TextBlock x:Name="TotalBooksText" Text="0" FontSize="24" FontWeight="Bold" 
                                      Foreground="White"/>
                        </StackPanel>
                    </Border>

                    <!-- AVAILABLE BOOKS -->
                    <Border Background="#10b981" Padding="20,15" Margin="0,0,15,0" 
                            Width="180" CornerRadius="8">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <TextBlock Text="✅" FontSize="16" Foreground="White" Margin="0,0,8,0"/>
                                <TextBlock Text="Available" FontSize="12" Foreground="White" FontWeight="SemiBold"/>
                            </StackPanel>
                            <TextBlock x:Name="AvailableBooksText" Text="0" FontSize="24" FontWeight="Bold" 
                                      Foreground="White"/>
                        </StackPanel>
                    </Border>

                    <!-- BORROWED BOOKS -->
                    <Border Background="#f59e0b" Padding="20,15" 
                            Width="180" CornerRadius="8">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <TextBlock Text="📖" FontSize="16" Foreground="White" Margin="0,0,8,0"/>
                                <TextBlock Text="Borrowed" FontSize="12" Foreground="White" FontWeight="SemiBold"/>
                            </StackPanel>
                            <TextBlock x:Name="BorrowedBooksText" Text="0" FontSize="24" FontWeight="Bold" 
                                      Foreground="White"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </StackPanel>

            <!-- BOOKS LIST -->
            <StackPanel Grid.Row="1">
                <TextBlock Text="📚 Library Collection" FontSize="18" FontWeight="SemiBold" 
                          Foreground="#1f2937" Margin="0,0,0,12"/>
                <ListBox x:Name="BooksListBox"
                        Background="White" BorderThickness="1" BorderBrush="#e5e7eb"
                        Height="500"/>
            </StackPanel>
        </Grid>

        <!-- SIDEBAR AREA -->
        <Border Grid.Column="1" Background="White" Margin="0,20,20,20" 
                BorderBrush="#e5e7eb" BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- FORM HEADER -->
                <Border Grid.Row="0" Background="#6366f1" Padding="20,16">
                    <TextBlock x:Name="FormTitle" Text="Add New Book" FontSize="18" FontWeight="Bold" 
                              Foreground="White" TextAlignment="Center"/>
                </Border>

                <!-- FORM CONTENT -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="25">
                    <StackPanel>
                    </StackPanel>
                </ScrollViewer>

                <!-- FORM ACTIONS -->
                <Border Grid.Row="2" Background="#f3f4f6" Padding="20,16" BorderBrush="#e5e7eb" BorderThickness="1,0,0,0">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Window>