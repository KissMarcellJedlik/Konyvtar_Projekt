<Window x:Class="ModernLibrary.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BookFlow Pro" Height="800" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="#f8fafc">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="400"/>
        </Grid.ColumnDefinitions>

        <!-- MAIN CONTENT AREA -->
        <Grid Grid.Column="0" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- HEADER -->
            <StackPanel Grid.Row="0" Margin="0,0,0,20">
                <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                    <Border Background="#6366f1" Padding="12,8" Margin="0,0,12,0" CornerRadius="8">
                        <TextBlock Text="📚" FontSize="20" Foreground="White"/>
                    </Border>
                    <TextBlock Text="BookFlow Pro" FontSize="24" FontWeight="Bold" 
                              Foreground="#1f2937"/>
                </StackPanel>
            </StackPanel>
        </Grid>

        <!-- SIDEBAR AREA -->
        <Border Grid.Column="1" Background="White" Margin="0,20,20,20" 
                BorderBrush="#e5e7eb" BorderThickness="1">
        </Border>
    </Grid>
</Window>